<?xml version='1.0' encoding='UTF-8'?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.1"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          xmlns:af="http://xmlns.oracle.com/adf/faces/rich"
          xmlns:f="http://java.sun.com/jsf/core">
  <c:set var="viewBundle" value="#{adfBundle['dms_v']}"/>
  <af:panelStretchLayout id="psl1" startWidth="0px" bottomHeight="4px">
    <f:facet name="bottom">
      <af:panelGroupLayout id="pgl4" layout="scroll">
        <af:popup id="p1">
          <af:panelWindow id="pw1" inlineStyle="width:300px;height:130px"
                          title="#{viewBundle['dms.dgpt.htchange.message']}">
            <af:inputText label="#{viewBundle['dms.dgpt.version']}" id="it1"
                          value="#{viewScope.HtChangeBean.newVersion}"/>
            <af:inputText label="#{viewBundle['dms.dgpt.endDate']}" id="it2"
                          value="#{viewScope.HtChangeBean.newEnd}"/>
            <af:outputLabel value="日期形式：YYYY_MM" id="ol1"/>
            <af:commandButton text="#{viewBundle['dcm.common.ok']}" id="cb6"
                              actionListener="#{viewScope.HtChangeBean.getNewVE}"/>
          </af:panelWindow>
        </af:popup>
        <af:popup id="p2" autoCancel="disabled" childCreation="deferred"
                  binding="#{viewScope.HtChangeBean.dataExportWnd}">
          <af:panelWindow id="pw2"
                          title="#{viewBundle['dms.dgpt.dataExport']}">
            <af:panelGridLayout id="pgl5">
              <af:gridRow marginTop="5px" height="auto" id="gr2">
                <af:gridCell marginStart="5px" width="auto" id="gc6"
                             inlineStyle="padding-top:5px">
                  <af:outputText value="#{viewBundle['dms.dgpt.excel.format']}"
                                 id="ot10"/>
                </af:gridCell>
                <af:gridCell marginStart="5px" marginEnd="5px" width="auto"
                             id="gc9">
                  <!--<af:selectBooleanRadio text="#{viewBundle['dms.dgpt.excel.03format']}"
                                         id="sbr3" group="excelFormat1"
                                         simple="true"/>-->
                  <af:selectBooleanRadio text="#{viewBundle['dms.dgpt.excel.07format']}"
                                         id="sbr4" group="excelFormat1"
                                         simple="true" autoSubmit="true"
                                         value="#{viewScope.HtChangeBean.isXlsx}"/>
                </af:gridCell>
              </af:gridRow>
              <af:gridRow marginTop="5px" marginBottom="5px" height="auto"
                          id="gr1">
                <af:gridCell marginStart="5px" width="auto" columnSpan="2"
                             halign="center" id="gc8"
                             inlineStyle="margin-top:5px">
                  <af:commandButton text="#{viewBundle['dcm.action.export']}"
                                    id="cb11">
                    <af:fileDownloadActionListener contentType="application/vnd.ms-excel"
                                                   method="#{viewScope.HtChangeBean.operation_export}"
                                                   filename="#{viewScope.HtChangeBean.exportDataExcelName}"/>
                  </af:commandButton>
                </af:gridCell>
              </af:gridRow>
            </af:panelGridLayout>
          </af:panelWindow>
        </af:popup>
        <af:popup id="p3" binding="#{viewScope.HtChangeBean.errorWindow}">
          <af:panelWindow id="pw3" title="#{viewBundle['dcm.import_error']}">
            <af:panelStretchLayout id="psl2" inlineStyle="width:800px;height:400px">
              <f:facet name="bottom"/>
              <f:facet name="center">
                <af:table value="#{bindings.ProPlanCostView2.collectionModel}"
                          var="row"
                          rows="#{bindings.ProPlanCostView2.rangeSize}"
                          emptyText="#{bindings.ProPlanCostView2.viewable ? 'No data to display.' : 'Access Denied.'}"
                          fetchSize="#{bindings.ProPlanCostView2.rangeSize}"
                          rowBandingInterval="0"
                          selectedRowKeys="#{bindings.ProPlanCostView2.collectionModel.selectedRow}"
                          selectionListener="#{bindings.ProPlanCostView2.collectionModel.makeCurrent}"
                          rowSelection="single" id="t3"
                          columnStretching="column:c5">
                  <af:column sortProperty="#{bindings.ProPlanCostView2.hints.Network.name}"
                             sortable="false"
                             headerText="#{bindings.ProPlanCostView2.hints.Network.label}"
                             id="c10">
                    <af:outputText value="#{row.Network}" id="ot16"/>
                  </af:column>
                  <af:column sortProperty="#{bindings.ProPlanCostView2.hints.WorkCode.name}"
                             sortable="false"
                             headerText="#{bindings.ProPlanCostView2.hints.WorkCode.label}"
                             id="c7">
                    <af:outputText value="#{row.WorkCode}" id="ot12"/>
                  </af:column>
                  <af:column sortProperty="#{bindings.ProPlanCostView2.hints.Work.name}"
                             sortable="false"
                             headerText="#{bindings.ProPlanCostView2.hints.Work.label}"
                             id="c11">
                    <af:outputText value="#{row.Work}" id="ot9"/>
                  </af:column>
                  <af:column sortProperty="#{bindings.ProPlanCostView2.hints.Term.name}"
                             sortable="false"
                             headerText="#{bindings.ProPlanCostView2.hints.Term.label}"
                             id="c9">
                    <af:outputText value="#{row.Term}" id="ot13"/>
                  </af:column>
                  <af:column sortProperty="#{bindings.ProPlanCostView2.hints.CostDetail.name}"
                             sortable="false"
                             headerText="#{bindings.ProPlanCostView2.hints.CostDetail.label}"
                             id="c12">
                    <af:outputText value="#{row.CostDetail}" id="ot19"/>
                  </af:column>
                  <af:column sortProperty="#{bindings.ProPlanCostView2.hints.Center.name}"
                             sortable="false"
                             headerText="#{bindings.ProPlanCostView2.hints.Center.label}"
                             id="c4">
                    <af:outputText value="#{row.Center}" id="ot15"/>
                  </af:column>
                  <af:column sortProperty="#{bindings.ProPlanCostView2.hints.WorkType.name}"
                             sortable="false"
                             headerText="#{bindings.ProPlanCostView2.hints.WorkType.label}"
                             id="c8">
                    <af:outputText value="#{row.WorkType}" id="ot7"/>
                  </af:column>
                  <af:column sortProperty="#{bindings.ProPlanCostView2.hints.BomCode.name}"
                             sortable="false"
                             headerText="#{bindings.ProPlanCostView2.hints.BomCode.label}"
                             id="c2">
                    <af:outputText value="#{row.BomCode}" id="ot11"/>
                  </af:column>
                  <af:column sortProperty="#{bindings.ProPlanCostView2.hints.Msg.name}"
                             sortable="false"
                             headerText="#{bindings.ProPlanCostView2.hints.Msg.label}"
                             id="c5">
                    <af:outputText value="#{row.Msg}" id="ot17"/>
                  </af:column>
                  <af:column sortProperty="#{bindings.ProPlanCostView2.hints.CreatedAt.name}"
                             sortable="false"
                             headerText="#{bindings.ProPlanCostView2.hints.CreatedAt.label}"
                             id="c3">
                    <af:outputText value="#{row.CreatedAt}" id="ot18">
                      <af:convertDateTime pattern="#{bindings.ProPlanCostView2.hints.CreatedAt.format}"/>
                    </af:outputText>
                  </af:column>
                  <af:column sortProperty="#{bindings.ProPlanCostView2.hints.CreatedBy.name}"
                             sortable="false"
                             headerText="#{bindings.ProPlanCostView2.hints.CreatedBy.label}"
                             id="c6">
                    <af:outputText value="#{row.CreatedBy}" id="ot8"/>
                  </af:column>
                </af:table>
              </f:facet>
              <f:facet name="start"/>
              <f:facet name="end"/>
              <f:facet name="top"/>
            </af:panelStretchLayout>
          </af:panelWindow>
        </af:popup>
        <af:popup id="p4" binding="#{viewScope.HtChangeBean.dataImportWnd}">
          <af:panelWindow id="pw4"
                          title="#{viewBundle['dgpt.template.data_import']}">
            <af:panelGridLayout id="pgl6">
              <af:gridRow marginTop="5px" height="auto" id="gr4">
                <af:gridCell marginStart="5px" width="auto" id="gc4">
                  <af:outputText value="#{viewBundle['dcm.plz_select_import_file']}" id="ot14"/>
                </af:gridCell>
                <af:gridCell marginStart="5px" marginEnd="5px" width="auto"
                             id="gc3">
                  <af:inputFile id="if1" columns="15" simple="true"
                                binding="#{viewScope.HtChangeBean.fileInput}"/>
                </af:gridCell>
              </af:gridRow>
              <af:gridRow marginTop="5px" marginBottom="5px" height="auto"
                          id="gr3">
                <af:gridCell marginStart="5px" width="auto" id="gc2"
                             halign="center" columnSpan="2">
                  <af:commandButton text="#{viewBundle['dms.dgpt.excel.import']}" id="cb9"
                                    actionListener="#{viewScope.HtChangeBean.operation_import}"/>
                </af:gridCell>
              </af:gridRow>
            </af:panelGridLayout>
          </af:panelWindow>
        </af:popup>
      </af:panelGroupLayout>
    </f:facet>
    <f:facet name="center">
      <af:panelCollection id="pc1">
        <f:facet name="menus"/>
        <f:facet name="toolbar">
          <af:toolbar id="t1">
          <af:group id="grp1">
            <!--<af:commandButton text="#{viewBundle['dcm.common.new']}" id="cb1"
                              action="#{viewScope.HtChangeBean.operation_new}"/>-->
              <af:commandButton text="#{viewBundle['dms.common.save']}" id="cb1"
                                actionListener="#{viewScope.HtChangeBean.operation_baocun}"
                                disabled="#{viewScope.HtChangeBean.isSelected or viewScope.HtChangeBean.isChange}"
                                partialTriggers="::soc1 ::iclov2 ::soc3 ::cb6"/>
              <af:commandButton text="#{viewBundle['dms.dgpt.block']}" id="cb2"
                              action="#{viewScope.HtChangeBean.operation_save}"
                              disabled="#{viewScope.HtChangeBean.isSelected or viewScope.HtChangeBean.isEdited}"
                              partialTriggers="::soc1 ::iclov2 ::soc3"/>
              <af:commandButton text="#{viewBundle['dms.dgpt.fblock']}" id="cb12"
                                rendered="#{sessionScope.authoriedFunction['UNFREEZE'] or viewScope.HtChangeBean.isManager}"
                                actionListener="#{viewScope.HtChangeBean.outBlock}"
                                partialTriggers="::soc1 ::iclov2 ::soc3"
                                disabled="#{viewScope.HtChangeBean.isSelected or not viewScope.HtChangeBean.isEdited}"/>
              <af:commandButton text="#{viewBundle['dms.common.cancel']}" id="cb3"
                              actionListener="#{viewScope.HtChangeBean.operation_reset}"
                              disabled="#{viewScope.HtChangeBean.isEdited}"
                              partialTriggers="::soc1 ::iclov2 ::soc3"/>
            <af:commandButton text="#{viewBundle['dcm.common.delete']}" id="cb4"
                              action="#{viewScope.HtChangeBean.operation_delete}"
                              disabled="#{viewScope.HtChangeBean.isEdited}"
                              partialTriggers="::soc1 ::iclov2 ::soc3"/>
            </af:group>
            <af:group id="g1">
              <af:commandButton text="#{viewBundle['dms.dgpt.excel.import']}" id="cb10"
                                disabled="#{viewScope.HtChangeBean.isSelected or viewScope.HtChangeBean.isEdited}"
                              partialTriggers="::soc1 ::iclov2 ::soc3">
                <af:showPopupBehavior popupId="::p4"/>
              </af:commandButton>
              <af:commandButton text="#{viewBundle['dcm.action.export']}" id="cb7"
                                disabled="#{viewScope.HtChangeBean.isSelected}"
                              partialTriggers="::soc1 ::iclov2 ::soc3">
                <af:showPopupBehavior popupId="::p2"/>
              </af:commandButton>
              <af:commandButton text="#{viewBundle['dcm.import_error']}" id="cb8"
                                actionListener="#{viewScope.HtChangeBean.errorPop}"/>
            </af:group>
          </af:toolbar>
        </f:facet>
        <f:facet name="statusbar"/>
        <af:table var="row" rowBandingInterval="0" id="t2"
                  value="#{viewScope.HtChangeBean.dataModel}"
                  selectionListener="#{viewScope.HtChangeBean.rowSelectionListener}"
                  selectedRowKeys="#{viewScope.HtChangeBean.dataModel.selectedRows}"
                  rowSelection="multiple" editingMode="clickToEdit"
                  emptyText="#{viewBundle['dms.common.nodata']}"
                  partialTriggers=":::soc1 :::iclov2 :::soc3 ::cb2 ::cb3 ::cb4">
            <af:forEach items="#{viewScope.HtChangeBean.dataModel.pcColsDef}"
                        var="attr" varStatus="vs">
                  <af:column sortable="false" headerText="#{attr.columnLable}" id="c1"
                            inlineStyle="#{'UPDATE' eq row['OPERATION'] ? 'background-color:GREEN;' : ''}
                                    #{'CREATE' eq row['OPERATION'] ? 'background-color:RED;' : ''}
                                    #{'DELETE' eq row['OPERATION'] ? 'background-color:YELLOW;' : ''}"
                             rendered="#{attr.dbTableCol ne &quot;ROW_ID&quot;}">
                    <af:inputText value="#{row[attr.dbTableCol]}" id="ot6"  
                                    valueChangeListener="#{viewScope.HtChangeBean.valueChangeLinstener}"/>
                  </af:column>
          </af:forEach>
        </af:table>
      </af:panelCollection>
    </f:facet>
    <f:facet name="start"/>
    <f:facet name="end"/>
    <f:facet name="top">
      <af:panelGroupLayout id="pgl1" layout="vertical">
        <af:panelGroupLayout id="pgl2" layout="horizontal">
        <af:selectOneChoice 
                              label="年" autoSubmit="true"
                              id="soc1"
                              value="#{viewScope.HtChangeBean.year}"
                            valueChangeListener="#{viewScope.HtChangeBean.yearChange}">
            <f:selectItems value="#{viewScope.HtChangeBean.yearList}" id="si1"/>
          </af:selectOneChoice>
          <af:panelLabelAndMessage label="实体" 
                                   id="plam1" >
            <af:outputText  id="ot1" partialTriggers="soc1 iclov2 soc3" value="#{viewScope.HtChangeBean.entity}"/>
          </af:panelLabelAndMessage>
          <af:panelLabelAndMessage label="产品线"
                                   id="plam2">
            <af:outputText  id="ot2" partialTriggers="soc1 iclov2 soc3" value="#{viewScope.HtChangeBean.PLine}"/>
          </af:panelLabelAndMessage>
          <!--af:selectOneChoice 
                              label="项目名称" autoSubmit="true"
                              id="iclov2"
                              value="#{viewScope.HtChangeBean.pname}"
                              valueChangeListener="#{viewScope.HtChangeBean.projectChange}">
            <f:selectItems id="si2"
                           value="#{viewScope.HtChangeBean.pnameList}"/>
          </af:selectOneChoice-->
                    <af:inputComboboxListOfValues label="项目名称" inlineStyle="margin-right:5px"
                                                value="#{viewScope.HtChangeBean.pname}"
                                                autoSubmit="true" clientComponent="true"
                                                validator="#{viewScope.HtChangeBean.proLov.listOfValuesModel.validate}"
                                                model="#{viewScope.HtChangeBean.proLov.listOfValuesModel}"
                                                id="iclov2" columns="80"
                                                valueChangeListener="#{viewScope.HtChangeBean.projectChange}"
                                              usage="auto">
                    <af:autoSuggestBehavior suggestedItems="#{viewScope.HtChangeBean.proLov.listOfValuesModel.suggest}"/>
          </af:inputComboboxListOfValues>
          <af:commandButton text="#{viewBundle['dms.dgpt.htchange']}" id="cb5">
            <af:showPopupBehavior popupId="p1"/>
          </af:commandButton>
        </af:panelGroupLayout>
        <af:panelGroupLayout id="pgl3" layout="horizontal">
            <af:selectOneChoice 
                              label="版本" autoSubmit="true"
                              id="soc3"
                              value="#{viewScope.HtChangeBean.version}"
                                valueChangeListener="#{viewScope.HtChangeBean.versionChange}"
                                partialTriggers="iclov2">
            <f:selectItems  id="si3"
                           value="#{viewScope.HtChangeBean.versionList}"/>
          </af:selectOneChoice>
          <af:panelLabelAndMessage label="项目类型"
                                   id="plam3">
            <af:outputText id="ot3" partialTriggers="soc1 iclov2 soc3"  value="#{viewScope.HtChangeBean.proType}"/>
          </af:panelLabelAndMessage>
          <af:panelLabelAndMessage label="行业线" 
                                   id="plam4">
            <af:outputText 
                           id="ot4" partialTriggers="soc1 iclov2 soc3" value="#{viewScope.HtChangeBean.HLine}"/>
          </af:panelLabelAndMessage>
          <af:panelLabelAndMessage label="业务线"
                                   id="plam5">
            <af:outputText 
                           id="ot5" partialTriggers="soc1 iclov2 soc3" value="#{viewScope.HtChangeBean.YLine}"/>
          </af:panelLabelAndMessage>
        </af:panelGroupLayout>
      </af:panelGroupLayout>
    </f:facet>
  </af:panelStretchLayout>
</jsp:root>
